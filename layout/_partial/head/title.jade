- var title = []

if page.title
  - title.push(page.title)
else if page.current > 1
  - title.push(__('page', page.current))
else
  if is_category()
    - title.push(page.category)
  else if is_tag()
    - title.push(page.tag)
  else if is_archive()
    if page.year
      - title.push(__('archive_something', page.year + (page.month ? '/' + page.month : '')))
    else
      - title.push(__('archive'))

- title.push(config.title)

title
  = title.join(' | ')