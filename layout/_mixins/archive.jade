mixin archive(post)
  article.archive-item(class='archive-item-' + post.layout)
    header.archive-header
      time.archive-header-time(datetime=date_xml(post.date), itemprop='datePublished')
        = date(post.date, 'M月DD日')

      - var title = post.title || post.link
      - var href = post.link || url_for(post.path)
      h1.archive-header-title
        a(href=href)= title
